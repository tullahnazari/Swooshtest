<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controller.FinishActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/exercisebg"
            android:id="@+id/imageView5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop"/>
    <TextView
            android:text="Looking for a co-ed beginner game near you...."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchLeagueText" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Looking for a co-ed beginner game near you...." android:textColor="#ffffff"
            android:fontFamily="@font/arbutus_slab" android:textSize="24sp" android:textAlignment="center"
            app:layout_constraintVertical_bias="0.429"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline3"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.5"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="240dp"
            android:layout_height="100dp"
            android:id="@+id/progressBar2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="84dp"
            app:layout_constraintTop_toBottomOf="@+id/searchLeagueText" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5" app:layout_constraintVertical_bias="0.166"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.012"/>
</androidx.constraintlayout.widget.ConstraintLayout>